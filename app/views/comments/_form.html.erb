<%= form_with model: comment, url: post_comments_path(post),  class: "w-full max-w-lg md:max-w-xl mx-auto mt-7", id: "comment-form", data: { turbo_method: :post } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="flex flex-col -mx-3 mb-6">
    <div class="w-full px-3 mb-6 md:mb-8">
      <%= f.label :body, class: "block uppercase tracking-wide text-gray-700 font-bold mb-2" %>
      <%= f.text_area :body,
        class: "appearance-none block w-full bg-white text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
      %>
    </div>
    <%= f.submit t('defaults.post'), class: "mx-auto w-1/2 bg-blue-500 text-white font-bold py-2 px-4 rounded mb-5 md:mb-8" %>
  </div>
<% end %>