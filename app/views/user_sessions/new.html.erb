<% content_for(:title, t('.title')) %>
<h1 class="text-xl md:text-2xl text-center text-gray-700 font-bold my-7"><%= t('.title') %></h1>
<%= form_with url: login_path, class: "bg-white rounded max-w-lg md:max-w-xl mx-auto" do |f| %>
  <div class="flex flex-col -mx-3 mb-6">
    <div class="mx-auto mt-5">
      <%= link_to login_at_provider_path(:google), data: { turbo: false } do %>
        <%= image_tag "web_light_rd_SI@2x.png", class: "w-44 mt-1" %>
      <% end %>
    </div>
    <div class="flex items-center mx-20 mt-5">
      <hr class="border-t border-gray-300 flex-grow">
      <span class="mx-4 text-gray-500">or</span>
      <hr class="border-t border-gray-300 flex-grow">
    </div>
    <div class="mx-11 mt-7 mb-6 md:mb-8">
      <%= f.label :email, class: "block uppercase tracking-wide text-xs text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email,
          placeholder: "メールアドレスを記入してください",
          class: "appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
    <div class="mx-11 mb-6 md:mb-8">
      <%= f.label :password, class: "block uppercase tracking-wide text-xs text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password,
          placeholder: "パスワードを記入してください",
          class: "appearance-none block w-full bg-white text-gray-700 border border-gray-200 rounded py-3 px-4 md:mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <%= f.submit t('.login'), class: "mx-auto w-1/2 bg-blue-500 text-white font-bold py-2 px-4 rounded mb-4 md:mb-6" %>
  </div>
<% end %>
<div class="flex justify-center mb-16 md:mb-20">
  <p class="text-sm mr-2 mb-1">アカウントをお持ちでない方は</p>
  <%= link_to t('.to_signup_page'), new_user_path, class: "text-sm text-purple-500 font-bold border-b border-purple-500" %>
</div>
<div class="mb-16 md:mb-20">
&nbsp;
</div>